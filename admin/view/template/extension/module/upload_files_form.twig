{{ header }}{{ column_left }}
{% block content %}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>Add File</h1>
    </div>
  </div>
  <div class="container-fluid">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-upload" class="form-horizontal">
      <div class="form-group required">
        <label class="col-sm-2 control-label" for="input-name">File Name</label>
        <div class="col-sm-10">
          <input type="text" name="name" value="" placeholder="File Name" id="input-name" class="form-control" />
        </div>
      </div>
      <div class="form-group required">
        <label class="col-sm-2 control-label" for="input-file">Select File</label>
        <div class="col-sm-10">
          <input type="file" name="file" value="" id="input-file" class="form-control" />
        </div>
      </div>
      <div class="buttons">
        <div class="pull-right">
          <button type="submit" form="form-upload" data-toggle="tooltip" title="Save" class="btn btn-primary"><i class="fa fa-save"></i></button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
{{ footer }}